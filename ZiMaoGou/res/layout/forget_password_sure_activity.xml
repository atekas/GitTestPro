<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_background_color">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

        <ImageView
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dip_10"
                android:layout_centerVertical="true"
                android:src="@drawable/back"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_222222"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="忘记密码"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/home_line"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/home_line"
            android:layout_marginTop="@dimen/dip_20"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            <TextView
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/black_222222"
                    android:text="@string/auth_code"/>

            <EditText
                    android:id="@+id/input_authCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_15"
                    android:padding="@dimen/dip_10"
                    android:hint="@string/please_input_auth_code"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/black_222222"
                    android:background="@null"/>

            <TextView
                    android:id="@+id/get_auth_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dip_20"
                    android:textSize="@dimen/text_size_13"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/drawable_auth_code"
                    android:textColor="@color/color_auth_code"
                    android:text="@string/get_auth_code"/>
        </LinearLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dip_20"
                android:background="@color/home_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/black_222222"
                    android:text="密码"/>

            <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dip_20"
                    android:textSize="@dimen/text_size_15"
                    android:padding="@dimen/dip_10"
                    android:hint="不少于6位的数字字母"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/black_222222"
                    android:background="@null"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dip_20"
                android:background="@color/home_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="@dimen/dip_60"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_20"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@color/black_222222"
                    android:text="确认密码"/>

            <EditText
                    android:id="@+id/input_password_sure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dip_20"
                    android:textSize="@dimen/text_size_15"
                    android:padding="@dimen/dip_10"
                    android:hint="请再次输入密码"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/black_222222"
                    android:background="@null"/>

        </LinearLayout>



    </LinearLayout>

    <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_login_pressed"
            android:layout_marginLeft="@dimen/dip_17"
            android:layout_marginRight="@dimen/dip_17"
            android:layout_marginTop="@dimen/dip_20"
            android:textSize="@dimen/text_size_17"
            android:gravity="center"
            android:textColor="@color/color_login_press"
            android:text="确认"/>



</LinearLayout>