<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/ll_top"
            android:layout_above="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black_222222"
                    android:text="选择支付方式"/>
            <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textSize="@dimen/text_size_medial"
                    android:textColor="@color/black_444444"
                    android:text="支付金额：￥0"/>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/home_line"/>
        <RelativeLayout
                android:id="@+id/rl_alipay"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/drawable_me_click">
            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/zhifubao_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:textSize="@dimen/text_size_medial"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_222222"
                    android:text="支付宝"/>

            <ImageView
                    android:id="@+id/img_alipay"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/drawable_pay_way_select"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/home_line"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_wxpay"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/drawable_me_click">
            <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/we_chat_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:textSize="@dimen/text_size_medial"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_222222"
                    android:text="微信"/>

            <ImageView
                    android:id="@+id/img_wxpay"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/drawable_pay_way_select"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/home_line"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
            <TextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_pressed"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:textSize="@dimen/text_size_18"
                    android:gravity="center"
                    android:textColor="@color/color_login_press"
                    android:text="提交"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>