<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
        >
    <LinearLayout
            android:layout_width="270dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@drawable/command_dialog_border">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/command_input_box"
                    android:padding="10dp"
                    android:gravity="left|center_vertical"
                    android:textColorHint="@color/command_hint_color"
                    android:textSize="@dimen/text_size_normal"
                    android:singleLine="true"
                    android:hint="输入口令"
                    />
        <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/command_line_color"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:textSize="@dimen/text_size_x_large"
                android:textColor="@color/black_111111"
                android:text="确定"
                />
    </LinearLayout>

</LinearLayout>