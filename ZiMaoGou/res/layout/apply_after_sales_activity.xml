<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e0e0e0">

    <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#f8f8f8">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/dip_5"
                android:layout_marginLeft="@dimen/dip_5"
                android:src="@drawable/back"/>

        <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="设置"/>

        <ImageView
                android:id="@+id/photo_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dip_20"
                android:layout_toRightOf="@+id/local_photo_title"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/title_line"/>

    <RelativeLayout
            android:onClick="CacheClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_222222"
                android:text="退货原因" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_right"
                android:textSize="@dimen/text_size_medial"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black_666666"
                android:text="请选择退货原因"/>
        <ImageView
                android:id="@+id/img_right"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_06"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_line"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:onClick="ServiceClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:id="@+id/tv_refundTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_222222"
                android:text="退款金额"/>
        <EditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/tv_refundTip"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:layout_centerVertical="true"
                android:hint="请输入退款金额"
                android:singleLine="true"
                android:textSize="@dimen/text_size_medial"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="numberDecimal"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black_222222"
                android:background="@null"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_line"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:onClick="RatingClick"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:id="@+id/tv_refundRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_marginTop="18dp"
                android:textColor="@color/black_222222"
                android:text="退款说明"/>
        <EditText
                android:id="@+id/input_instructions"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/tv_refundRead"
                android:layout_height="match_parent"
                android:layout_marginTop="18dp"
                android:gravity="top|left"
                android:singleLine="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="numberDecimal"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black_222222"
                android:background="@null"/>
    </RelativeLayout>


    <com.sensu.android.zimaogou.widget.NoScrollGridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:paddingLeft="@dimen/dip_20"
            android:paddingRight="@dimen/dip_20"
            android:paddingTop="@dimen/dip_20"
            android:paddingBottom="20dp"
            android:background="@color/white"
            android:scrollbars="none"
            android:numColumns="4"/>
    <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_login_pressed"
            android:layout_marginLeft="@dimen/dip_17"
            android:layout_marginRight="@dimen/dip_17"
            android:layout_marginTop="@dimen/dip_20"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:textColor="@color/color_login_press"
            android:text="提交"/>
</LinearLayout>