<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
        >
    <LinearLayout
            android:layout_width="270dp"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:background="@drawable/command_dialog_border">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:gravity="center"
                android:textSize="@dimen/text_size_x_large"
                android:textColor="@color/black_111111"
                android:text="激活优惠券"
                />
        <EditText
                android:id="@+id/et_couponCode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/command_input_box"
                android:padding="10dp"
                android:gravity="left|center_vertical"
                android:textColorHint="@color/command_hint_color"
                android:textSize="@dimen/text_size_normal"
                android:singleLine="true"
                android:hint="请输入您的优惠券号码"
                />
        <View android:layout_width="match_parent" android:layout_height="1px"
              android:background="@color/command_line_color"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="horizontal">
            <Button
                    android:id="@+id/bt_sure"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_me_click"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black_222222"
                    android:text="确定"
                    />
            <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/command_line_color"/>
            <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_me_click"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/black_222222"
                    android:text="取消"
                    />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>