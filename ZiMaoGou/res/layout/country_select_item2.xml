<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/area_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_15"
                android:paddingLeft="@dimen/dip_20"
                android:gravity="center_vertical"
                android:textColor="@color/black_444444"
                android:background="@color/white"
                android:text="新加坡"/>

        <ImageView
                android:id="@+id/country_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dip_20"
                android:src="@drawable/drawable_country_select"/>

    </LinearLayout>

    <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="@dimen/dip_20"
            android:background="#d5d8d9"/>

</LinearLayout>