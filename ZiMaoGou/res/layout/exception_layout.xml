<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >
    <com.sensu.android.zimaogou.widget.ExceptionLinearLayout
            android:id="@+id/ll_exception"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">
            <View
                    android:id="@+id/left_line"
                    android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#dddddd"
                  android:layout_centerVertical="true"
                  android:layout_toLeftOf="@+id/img_exception"/>
            <ImageView
                    android:id="@+id/img_exception"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/exception_bag"/>
            <View android:id="@+id/right_line"
                    android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="#dddddd"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/img_exception"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/tv_exception"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/text_size_normal"
                android:text="您的购物车还没有商品"/>
        <Button
                android:id="@+id/bt_reload"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/drawable_login_pressed"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/text_size_18"
                android:gravity="center"
                android:textColor="@color/color_login_press"
                android:text="重新加载"/>
    </com.sensu.android.zimaogou.widget.ExceptionLinearLayout>
</LinearLayout>