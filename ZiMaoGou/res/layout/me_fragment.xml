<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eff4f5">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/me_back_title1"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_centerInParent="true">

                <com.sensu.android.zimaogou.widget.RoundImageView
                        android:id="@+id/head_pic"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/head_pic_default"/>

                <TextView
                        android:id="@+id/login_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="注册/登陆"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/login_register"/>
                <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        />
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/rl_message"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    >
                <ImageView android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:layout_centerInParent="true"
                           android:src="@drawable/img_message"/>
                <ImageView
                        android:id="@+id/tv_numOfMessage"
                        android:visibility="gone"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:textSize="12sp"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/message_unread"
                        android:text="1"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/white">
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/wait_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:drawableTop="@drawable/wait_pay_icon"
                        android:drawablePadding="10dp"
                        android:text="@string/wait_pay"/>
                <TextView
                        android:id="@+id/tv_numOfOrder1"
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:textSize="10sp"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="27dp"
                        android:background="@drawable/message_num"
                        android:text="1"/>
            </RelativeLayout>

            <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:background="#e5e5e5"/>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/wait_receive"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/wait_receive_goods"
                        android:drawablePadding="10dp"
                        android:text="@string/wait_receive_goods"/>
                <TextView
                        android:id="@+id/tv_numOfOrder2"
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:textSize="10sp"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="27dp"
                        android:background="@drawable/message_num"
                        android:text=""/>
            </RelativeLayout>

            <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:background="#e5e5e5"/>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/sales_return"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/sales_return"
                        android:drawablePadding="10dp"
                        android:text="@string/sales_reture"/>
                <TextView
                        android:id="@+id/tv_numOfOrder3"
                        android:visibility="gone"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:textSize="10sp"
                        android:textColor="@color/red"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="27dp"
                        android:background="@drawable/message_num"
                        android:text=""/>
            </RelativeLayout>

            <View
                    android:layout_width="2px"
                    android:layout_height="wrap_content"
                    android:background="#e5e5e5"/>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/all_orders"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:drawableTop="@drawable/all_orders"
                        android:drawablePadding="10dp"
                        android:text="@string/all_orders"/>
            </RelativeLayout>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#e5e5e5"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="15dp"
                android:background="#e5e5e5"/>
        <RelativeLayout
                android:id="@+id/my_coupon"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/drawable_me_click">
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/mine_coupon"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:text="@string/my_coupon"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/arrow_right"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="1px"
                    android:layout_marginLeft="50dp"
                    android:background="#e5e5e5"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/my_collection"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/drawable_me_click">
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/my_collection"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:text="@string/my_collection"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/arrow_right"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="50dp"
                    android:background="#e5e5e5"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/my_travel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/drawable_me_click">
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/my_travel"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"
                        android:text="我的足迹"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/arrow_right"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="50dp"
                    android:background="#e5e5e5"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/take_goods_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/drawable_me_click">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/take_goods_address"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:text="@string/take_goods_address"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/arrow_right"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#e5e5e5"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="#e5e5e5"/>
        <RelativeLayout
                android:id="@+id/recommend_friends"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/drawable_me_click">
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/recommend_friends"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:textColor="#444444"
                        android:text="@string/recommend_friends"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/arrow_right"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="50dp"
                    android:background="#e5e5e5"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/online_service"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/drawable_me_click">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/online_service"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="#444444"
                    android:text="@string/online_service"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/arrow_right"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:background="#e5e5e5"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/service_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/drawable_me_click">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/service_phone"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="#444444"
                    android:text="@string/service_phone"/>

            <TextView
                    android:id="@+id/service_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#444444"
                    android:text="022-27963102"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/arrow_right"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:background="#e5e5e5"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/drawable_me_click">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/setting"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="#444444"
                    android:text="@string/setting"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/arrow_right"/>

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#e5e5e5"/>
    </LinearLayout>
</ScrollView>