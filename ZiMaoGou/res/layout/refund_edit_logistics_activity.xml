<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e0e0e0">

    <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#f8f8f8">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/dip_5"
                android:layout_marginLeft="@dimen/dip_5"
                android:src="@drawable/back"/>

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="填写物流"/>

        <ImageView
                android:id="@+id/photo_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dip_20"
                android:layout_toRightOf="@+id/local_photo_title"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/title_line"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medial"
                    android:textColor="@color/black_222222"
                    android:text="递送到如下地址："/>
            <TextView
                    android:id="@+id/tv_receiverAddress"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medial"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black_222222"
                    android:text="上海市杨浦区大学路292号301 周先生 15618850919"/>

        </LinearLayout>
    <RelativeLayout
            android:onClick="CompanyClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_222222"
                android:textColorHint="@color/black_222222"
                android:hint="请选择物流公司"
                android:text=""/>
        <TextView
                android:id="@+id/tv_refundReason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/img_right"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/text_size_medial"

                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black_666666"
                android:textColorHint="@color/black_666666"
                android:text=""/>

        <ImageView
                android:id="@+id/img_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_right"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_line"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">
        <EditText
                android:id="@+id/et_logisticsNo"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/img_right"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_222222"
                android:textColorHint="@color/black_222222"
                android:background="@null"
                android:hint="请输入快递单号"
                android:text=""/>


        <ImageView
                android:id="@+id/img_right"
                android:visibility="invisible"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_right"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/home_line"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_login_pressed"
            android:layout_marginLeft="@dimen/dip_17"
            android:layout_marginRight="@dimen/dip_17"
            android:layout_marginTop="@dimen/dip_20"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:textColor="@color/color_login_press"
            android:text="提交"/>
</LinearLayout>