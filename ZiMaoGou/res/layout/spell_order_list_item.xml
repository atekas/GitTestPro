<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <ImageView
            android:id="@+id/group_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/special_2"/>

    <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginTop="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/black_222222"
            android:text="降血压健脑银杏进化120毫克"/>

    <TextView
            android:id="@+id/product_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/text_size_16"
            android:textColor="#666666"
            android:text="降血压健脑银杏进化降血压健脑银杏进化"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/dip_10"
            android:layout_marginRight="@dimen/dip_10"
            android:layout_marginTop="20dp">

        <TextView
                android:id="@+id/group_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/red"
                android:text="¥68"/>

        <TextView
                android:id="@+id/old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_10"
                android:textSize="@dimen/text_size_16"
                android:textColor="#666666"
                android:text="¥98"/>

        <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>

        <LinearLayout
                android:id="@+id/group"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/group_white_red">

            <TextView
                    android:id="@+id/group_person_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16"
                    android:text="3人成团"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16"
                    android:text="去组团"/>

        </LinearLayout>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="@dimen/dip_20"
            android:background="@color/home_line"/>

</LinearLayout>