<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:padding="1dp"
        android:id="@+id/video_sdk_tag_circle"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/venvy_video_sdk_shadow_shop_tag_bg"
        android:src="@drawable/venvy_video_sdk_point_shop_bg" />

    <TextView
        android:id="@+id/video_sdk_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/video_sdk_tag_circle"
        android:layout_toEndOf="@+id/video_sdk_tag_circle"
        android:layout_toRightOf="@+id/video_sdk_tag_circle"
        android:background="@drawable/venvy_video_sdk_tag_bg"
        android:clickable="true"
        android:gravity="center"
        android:minWidth="40dp"
        android:padding="3dp"
        android:textColor="@android:color/white"
        android:textSize="9dp" />

</RelativeLayout>