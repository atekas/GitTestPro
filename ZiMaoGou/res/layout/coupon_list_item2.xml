<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/invalid"
            android:layout_marginBottom="15dp"
            >
        <TextView
                android:id="@+id/tv_moneyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_coupon_small"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/invalid_color"
                android:textStyle="bold"
                android:text="￥"
                />
        <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_moneyType"
                android:textSize="@dimen/text_size_coupon_big"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="23dp"
                android:textColor="@color/invalid_color"
                android:textStyle="bold"
                android:text="100"
                />
        <TextView
                android:id="@+id/tv_moneyUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/invalid_color"
                android:text="满200元使用"
                />
        <TextView
                android:id="@+id/tv_moneyTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_below="@+id/tv_moneyUsed"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/invalid_color"
                android:text="2015.8.30 至 2015.11.30"
                />
            <ImageView
                    android:id="@+id/img_coupon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/y_06"
                    />
    </RelativeLayout>

</LinearLayout>