<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e0e0e0">

    <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#f8f8f8">

        <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/dip_5"
                android:layout_marginLeft="@dimen/dip_5"
                android:src="@drawable/back"/>

        <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="设置"/>

        <ImageView
                android:id="@+id/photo_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="@dimen/dip_20"
                android:layout_toRightOf="@+id/local_photo_title"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/title_line"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/title_line"/>
    <RelativeLayout
            android:id="@+id/rl_updatePass"
            android:onClick="UpdatePassClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black_666666"
                android:text="修改密码"/>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/home_line"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:onClick="CacheClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_666666"
                android:text="清除图片缓存"/>
        <TextView
                android:id="@+id/cache_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_right"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_666666"
                android:text="200M"/>
        <ImageView
                android:id="@+id/img_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_right"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/title_line"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/title_line"/>
    <RelativeLayout
            android:onClick="ServiceClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_666666"
                android:text="用户协议"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/home_line"/>
    <RelativeLayout
            android:onClick="RatingClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_666666"
                android:text="去评分"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/home_line"/>
    <RelativeLayout
            android:onClick="AboutUsClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="15dp"
            android:background="@drawable/drawable_me_click">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:textColor="@color/black_666666"
                android:text="关于自贸购"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/title_line"/>

    <RelativeLayout
            android:id="@+id/rl_loginOut"
            android:onClick="LoginOutClick"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawable_me_click">
        <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:background="@color/title_line"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medial"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="@color/red"
                android:text="退出账号"/>
        <View android:layout_width="match_parent"
              android:layout_height="1px"
              android:background="@color/title_line"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>