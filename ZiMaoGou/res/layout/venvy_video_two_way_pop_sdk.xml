<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sdk_load_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ProgressBar
        android:id="@+id/sdk_ijk_load_buffer_load"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/venvy_video_sdk_ijk_progress_bar_load_bg"
        android:indeterminateOnly="true" />

    <TextView
        android:id="@+id/sdk_ijk_load_buffer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdk_ijk_load_buffer_load"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:text="0%"
        android:textColor="#ffececec" />

</RelativeLayout>
