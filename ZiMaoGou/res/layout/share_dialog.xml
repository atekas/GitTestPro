<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="21dp">
        <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/drawable_me_click"
                android:gravity="center"
                android:padding="15dp"
                android:layout_weight="1">
            <ImageView android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/wx_img"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black_222222"
                    android:layout_marginTop="10dp"
                    android:text="微信"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_friends"
                android:orientation="vertical"
                android:background="@drawable/drawable_me_click"
                android:gravity="center"
                android:padding="15dp"
                android:layout_weight="1">
            <ImageView android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:background="@drawable/friends_share_img"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black_222222"
                    android:layout_marginTop="10dp"
                    android:text="朋友圈"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/ll_sina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_me_click"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:layout_weight="1">
            <ImageView android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/wb_img"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/black_222222"
                    android:layout_marginTop="10dp"
                    android:text="新浪微博"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>