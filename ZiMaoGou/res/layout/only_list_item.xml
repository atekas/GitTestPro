<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
        android:background="@drawable/drawable_me_click">
    <TextView
            android:id="@+id/tv_tip"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_medial"
            android:textColor="@color/black_222222"
            android:background="@color/white"/>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/home_line"/>
</LinearLayout>